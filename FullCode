                            title: "Revenue Trend",
                            icon: "chart.line.uptrend.xyaxis",
                            color: .green
                        ) {
                            RevenueChartView(project: project)
                        }
                        
                        AnalyticsCard(
                            title: "Downloads",
                            icon: "arrow.down.circle",
                            color: .blue
                        ) {
                            DownloadsChartView(project: project)
                        }
                        
                        AnalyticsCard(
                            title: "Key Metrics",
                            icon: "speedometer",
                            color: .orange
                        ) {
                            KeyMetricsView(project: project)
                        }
                    } else {
                        VStack(spacing: 16) {
                            Image(systemName: "chart.bar.doc.horizontal")
                                .font(.system(size: 60))
